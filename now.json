{
  "version": 2,
  "builds": [
    { "src": "/server/index.js", "use": "@now/node-server" },
    {
      "src": "/public/index.html",
      "use": "@now/static"
    },
    {
      "src": "/public/script/*.js",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html",
      "methods": ["GET"]
    },
    {
      "src": "/maze",
      "dest": "/server/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/public/script/(.*)",
      "dest": "/public/script/$1",
      "methods": ["GET"]
    }
  ]
}
